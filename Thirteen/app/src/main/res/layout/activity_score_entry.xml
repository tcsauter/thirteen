<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:elevation="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:theme="@style/TextViewHeaders"
            android:layout_gravity="center_vertical"
            android:id="@+id/tvRound_scoreEntry"
            tools:text="Round 1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/ivRound_scoreEntry"
            android:padding="5dp"
            tools:src="@drawable/round_up"/>
        <ImageButton
            android:id="@+id/bt_enter_scores"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:src="@drawable/check" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/scoreSet_1"
                android:layout_marginTop="2dp"
                tools:background="@color/red">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/player1"
                    android:id="@+id/tv_score_p1_name"
                    android:theme="@style/TextViewLabels" />

                <EditText
                    android:id="@+id/et_p1_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextScore"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/scoreSet_2"
                android:layout_marginTop="2dp"
                tools:background="@color/yellow">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/player2"
                    android:id="@+id/tv_score_p2_name"
                    android:theme="@style/TextViewLabels" />

                <EditText
                    android:id="@+id/et_p2_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextScore" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/scoreSet_3"
                android:layout_marginTop="2dp"
                tools:background="@color/green">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/player3"
                    android:id="@+id/tv_score_p3_name"
                    android:theme="@style/TextViewLabels" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextScore"
                    android:id="@+id/et_p3_score"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/scoreSet_4"
                android:layout_marginTop="2dp"
                tools:background="@color/blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/player4"
                    android:id="@+id/tv_score_p4_name"
                    android:theme="@style/TextViewLabels" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextScore"
                    android:id="@+id/et_p4_score"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>