<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.thirteen.GameFaceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_gf_message"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        tools:text="Show us your happy face!"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <!--Actual Position parameters for ImageViews will be set in code-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/photo_row"
        android:layout_below="@+id/tv_gf_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

        <ImageView
            android:layout_width="@dimen/thumbnail_width"
            android:layout_gravity="center"
            android:id="@+id/iv_gf_happy"
            android:layout_height="@dimen/thumbnail_height"
            android:background="@color/background"
            android:src="@drawable/add"/>

        <ImageView
            android:layout_width="@dimen/thumbnail_width"
            android:layout_gravity="center"
            android:id="@+id/iv_gf_sad"
            android:layout_height="@dimen/thumbnail_height"
            android:background="@color/background"
            android:layout_marginStart="12dp"
            android:src="@drawable/add" />

        <ImageView
            android:layout_width="@dimen/thumbnail_width"
            android:layout_gravity="center"
            android:id="@+id/iv_gf_gameface"
            android:layout_height="@dimen/thumbnail_height"
            android:background="@color/background"
            android:layout_marginStart="12dp"
            android:src="@drawable/add"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/photo_row"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/btn_negative"
            android:text="Cancel"
            android:textAlignment="center"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="|"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/btn_positive"
            android:text="OK"
            android:textAlignment="center"
            android:textSize="32sp" />

    </LinearLayout>

</RelativeLayout>
